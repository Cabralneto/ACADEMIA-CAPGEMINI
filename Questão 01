// quest√£o 01

public class Main {
	public static void escada(int n) {
		int i, j, aux = n;
		for (i = 0; i < n; i++) {
			while (aux > 0) {
				System.out.print(" ");
				aux--;
			}
			aux = (n - 1) - i;

			for (j = aux; j < n; j++) {
				System.out.print("*");
			}
			System.out.println("");
		}
	}
	
	public static void main(String[] args) {
	System.out.println("Exercicio 1:");
	escada(6);
}
